---
apiVersion: v1
kind: Secret
metadata:
  name: cloudflare-api-key
  namespace: cert-manager
type: Opaque
stringData:
  api-key: {{ cloudflare_api_key }}

---

apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt
spec:
  acme:
    email: {{ email_address }}
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: letsencrypt-key
    solvers:
      - selector: {}
        dns01:
          cloudflare:
            email: {{ email_address }}
            apiKeySecretRef:
              name: cloudflare-api-key
              key: api-key
